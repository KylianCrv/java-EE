        <url-pattern>/CountWordsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PrimeNumber</servlet-name>
        <url-pattern>/PrimeNumber</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DistributeurServlet</servlet-name>
        <url-pattern>/DistributeurServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
